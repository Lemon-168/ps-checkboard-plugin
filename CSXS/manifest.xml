<?xml version="1.0" encoding="UTF-8" standalone="no"?> 
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                  ExtensionBundleId="com.yueqian.checkerboard" 
                  ExtensionBundleVersion="1.0" 
                  Version="6.0">
    <ExtensionList> 
        <Extension Id="com.yueqian.checkerboard.panel" Version="1.0"/>
    </ExtensionList> 
    <ExecutionEnvironment> 
        <HostList>
            <Host Name="PHXS" Version="[11.0,99.9]"/> 
            <Host Name="PHSP" Version="[11.0,99.9]"/> 
            <Host Name="PHXS" Version="[22.0,99.9]"/> <!-- 添加对Photoshop 2022+-2023的支持 -->
        </HostList> 
        <LocaleList> 
            <Locale Code="All"/> 
        </LocaleList> 
        <RequiredRuntimeList> 
            <RequiredRuntime Name="CSXS" Version="6.0"/>  
        </RequiredRuntimeList> 
    </ExecutionEnvironment> 
    <DispatchInfoList> 
        <Extension Id="com.yueqian.checkerboard.panel">
            <DispatchInfo> 
                <Resources> 
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/main.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources> 
                <Lifecycle> 
                    <AutoVisible>true</AutoVisible>
                    <StartOn>EventsAfterPluginLoad</StartOn> <!-- 启动时机 -->
                </Lifecycle> 
                <UI> 
                    <Type>Panel</Type>
                    <Menu>棋盘格工具</Menu> <!-- 修改为棋盘格工具 -->
                    <Geometry> 
                        <Size>
                            <Height>300</Height> <!-- 调整默认尺寸限制死 -->
                            <Width>280</Width> 
                        </Size> 
                        <MaxSize> 
                            <Height>300</Height> 
                            <Width>280</Width> 
                        </MaxSize> 
                        <MinSize> 
                            <Height>300</Height> 
                            <Width>280</Width> 
                        </MinSize>
                    </Geometry> 
                    <Icons>
                        <Icon Type="Normal">./img/icon1.png</Icon> 
                        <Icon Type="DarkNormal">./img/icon2.png</Icon> 
                    </Icons> 
                </UI> 
            </DispatchInfo> 
        </Extension> 
    </DispatchInfoList> 
</ExtensionManifest>